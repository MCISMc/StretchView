{
   "background": {
      "scripts": [ "js/background.js" ]
   },
   "browser_action": {
      "default_icon": "images/icon.png",
      "default_popup": "html/popup.html",
      "default_title": "StretchView"
   },
   "content_scripts": [ {
      "js": [ "Jquery/jquery-2.1.3.min.js", "Jquery/jquery.hotkeys.js", "Jquery/jquery.fullscreen.js", "js/StretchView.js" ],
      "matches": [ "https://*.youtube.com/", "https://*.primevideo.com/", "https://*.hotstar.com/", "https://*.sonyliv.com/", "https://*.netflix.com/" ]
   } ],
   "description": "Force stretch videos to full screen display and remove annoying black bars from popular streaming websites",
   "icons": {
      "128": "images/icon.png"
   },
   "manifest_version": 2,
   "name": "StretchView",
   "short_name ": "StretchView",
   "permissions": [ "https://*.youtube.com/", "https://*.primevideo.com/", "https://*.hotstar.com/", "https://*.sonyliv.com/", "https://*.netflix.com/",  "storage", "notifications" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "1.3"
}

